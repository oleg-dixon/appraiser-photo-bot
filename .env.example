# === ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ ===

# Токен бота от @BotFather
# Получите: https://t.me/botfather -> /newbot
BOT_TOKEN=your_bot_token_here

# === ОСНОВНЫЕ НАСТРОЙКИ БОТА ===

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Интервал автоматической очистки старых сессий (в секундах)
CLEANUP_INTERVAL=600

# Время жизни сессии (в секундах)
SESSION_TIMEOUT=1800

# Максимальное количество фото
MAX_PHOTOS=100

# Максимальное количество строк в таблице
MAX_ROWS=10

# Максимальное количество столбцов в таблице
MAX_COLS=10

# Качество сжатия JPEG (1-100)
IMAGE_QUALITY=85

# Максимальный размер изображения (ширина или высота)
IMAGE_MAX_SIZE=2000

# === НАСТРОЙКИ КНОПОК И ИНТЕРФЕЙСА ===

# Режим отладки (true/false)
DEBUG=false

# Включить кнопки меню (true/false)
ENABLE_BUTTONS=true

# Таймаут сессии с кнопками (в секундах)
BUTTON_TIMEOUT=3600

# ID администратора для уведомлений (опционально)
# ADMIN_ID=123456789

# === РАСШИРЕННЫЕ НАСТРОЙКИ (для разработки) ===

# Прокси (опционально)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Настройки базы данных (если будет добавлена)
# DATABASE_URL=sqlite:///bot.db
# DATABASE_URL=postgresql://user:password@localhost/bot

# === ТАЙМАУТЫ ДЛЯ TELEGRAM API ===
# READ_TIMEOUT=60
# WRITE_TIMEOUT=60
# CONNECT_TIMEOUT=30
# POOL_TIMEOUT=30

# === ПРЕДУПРЕЖДЕНИЕ ===
# Не коммитьте этот файл с реальными токенами в Git!
# Добавьте .env в .gitignore